generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model games {
  id           Int          @id @default(autoincrement())
  rawg_id      Int      @unique
  title        String       @db.VarChar(150)
  platform     String?      @db.VarChar(50)
  genre        String?      @db.VarChar(50)
  cover_url    String?
  release_year Int?
  created_at   DateTime?    @default(now()) @db.Timestamp(6)
  user_games   user_games[]
}

model user_games {
  id          Int       @id @default(autoincrement())
  user_id     Int
  game_id     Int
  status      String?   @default("wishlist") @db.VarChar(30)
  rating      Int?      @db.SmallInt
  progress    Int?      @default(0) @db.SmallInt
  started_at  DateTime? @db.Date
  finished_at DateTime? @db.Date
  created_at  DateTime? @default(now()) @db.Timestamp(6)
  updated_at  DateTime? @updatedAt 
  games       games     @relation(fields: [game_id], references: [id], onDelete: Cascade)
  users       users     @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@unique([user_id, game_id], map: "unique_user_game")
}

model users {
  id            Int          @id @default(autoincrement())
  name          String       @db.VarChar(100)
  email         String       @unique @db.VarChar(150)
  password_hash String       @db.VarChar(255)
  created_at    DateTime?    @default(now()) @db.Timestamp(6)
  updated_at    DateTime?    @updatedAt
  user_games    user_games[]
}
